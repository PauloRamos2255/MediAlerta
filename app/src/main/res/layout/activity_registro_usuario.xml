<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azul_marino"
    tools:context=".Registro_Usuario">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/atras"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:layout_marginLeft="10dp"/>





    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/registrate" />



    <EditText
        android:id="@+id/txtnombres"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Nombres"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txtapellidos"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Apellidos"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_telf"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Teléfono"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txtcorreo"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_correo"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Correo"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtclave"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/custom_contra"
        android:hint="Contraseña"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_design"
        android:layout_marginTop="75dp"
        android:text="Registrar"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>